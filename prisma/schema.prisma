datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

//
// Enums
//

enum UserRole {
  USER
  ADMIN
}

enum PlanTier {
  FREE
  PRO
  AGENCY
}

//
// Core Auth models (for NextAuth + PrismaAdapter)
//

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?          // used by Credentials provider
  role          UserRole @default(USER)
  displayName   String?
  preferences   String?          // JSON for user preferences
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  audits        SeoAudit[]
  contentBriefs ContentBrief[]
  subscriptions Subscription[]
  integrations  Integration[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

//
// App domain models (what your pages use: projects, keywords, audits, etc.)
//

model Project {
  id        String   @id @default(cuid())
  ownerId   String
  name      String
  domain    String?
  plan      PlanTier @default(FREE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner         User          @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  keywords      Keyword[]
  audits        SeoAudit[]
  contentBriefs ContentBrief[]
}

model SeoAudit {
  id                String   @id @default(cuid())
  userId            String
  projectId         String?
  url               String
  keyword           String?
  score             Int?
  statusCode        Int?
  title             String?
  metaDescription   String?
  h1Count           Int?
  wordCount         Int?
  issuesJson        String?  // Array of issue objects
  recommendationsJson String? // Array of recommendation strings
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id])
}

model Keyword {
  id           String   @id @default(cuid())
  projectId    String
  term         String
  searchVolume Int?
  difficulty   Int?
  intent       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ContentBrief {
  id                String   @id @default(cuid())
  userId            String
  projectId         String?
  targetKeyword     String
  targetUrl         String?
  title             String?
  metaDescription   String?
  outline           String?  // JSON structured outline
  talkingPoints     String?  // JSON array of points
  notes             String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project? @relation(fields: [projectId], references: [id])
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String
  user                 User     @relation(fields: [userId], references: [id])

  // Stripe identifiers
  stripeCustomerId     String?
  stripeSubscriptionId String?
  stripePriceId        String?

  // Plan & status
  plan                 PlanTier
  status               String

  // Billing period
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean? @default(false)

  // Timestamps
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}


model Integration {
  id              String   @id @default(cuid())
  userId          String
  provider        String
  name            String?
  baseUrl         String?
  apiKey          String?  // Encrypted or masked
  status          String   @default("pending") // pending, connected, error
  lastCheckedAt   DateTime?
  lastError       String?
  config          String?  // Additional JSON config
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
}

