# ArchCloud SEO - Environment Variables Template
# Copy this file to .env and fill in your values

# ====================
# DATABASE (Supabase)
# ====================
DATABASE_URL="postgresql://user:password@host:5432/dbname"
DIRECT_URL="postgresql://user:password@host:5432/dbname"

# ====================
# AUTHENTICATION
# ====================
AUTH_SECRET="generate-a-secure-random-string-min-32-chars"
AUTH_GOOGLE_ID="your-google-oauth-client-id"
AUTH_GOOGLE_SECRET="your-google-oauth-client-secret"

# ====================
# ENCRYPTION (CRITICAL!)
# ====================
# Used for encrypting integration credentials
# Must be at least 32 characters
SECRET_ENCRYPTION_KEY="generate-min-32-char-random-string-CHANGE-THIS"

# ====================
# API KEYS (Optional - Platform Level)
# ====================
# These are fallback keys when workspaces don't configure their own
# Workspaces should use BYOK (Bring Your Own Keys) for production

# OpenAI - For AI content generation
OPENAI_API_KEY=""

# SERP API - For keyword research
SERPAPI_API_KEY=""

# Google PageSpeed Insights - For performance audits
PAGESPEED_API_KEY=""

# ====================
# STRIPE (Optional)
# ====================
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PRICE_ID_PRO=""
STRIPE_PRICE_ID_AGENCY=""
STRIPE_PRICE_ID_ENTERPRISE=""

# ====================
# ADMIN & CRON
# ====================
# Secret for cron job authentication
CRON_SECRET="generate-secure-random-string"

# Service API key for internal services
INTERNAL_SERVICE_API_KEY="generate-secure-random-string"

# ====================
# DEPLOYMENT
# ====================
# Production URL
NEXT_PUBLIC_APP_URL="https://aiseo.archcloudsystems.com"

# ====================
# NOTES
# ====================
# - Never commit .env files to git
# - Use different values for dev/staging/production
# - Rotate secrets regularly
# - Store production secrets in secure vault
# - Super admin email is hardcoded: archcloudsystems@gmail.com
